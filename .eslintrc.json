{
    "env": {
        "es2021": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style":["error", "windows"],
        "no-underscore-dangle": ["error", { "allowAfterThis": true }],
        "func-names": ["error", "never"],
        "class-methods-use-this": "off",
        "prefer-destructuring": ["error", {
            "VariableDeclarator": {
              "array": false,
              "object": true
            }
        }]
    }
}
